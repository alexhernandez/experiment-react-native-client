{
  "name": "@amplitude/experiment-react-native-client",
  "version": "1.0.0",
  "description": "Official Amplitude Experiment React Native Client",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "experiment-react-native-client.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "generate:version": "genversion --es6 src/gen/version.ts",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "yarn generate:version && bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/amplitude/experiment-react-native-client",
  "author": "Amplitude Inc. <sdk.dev@amplitude.com> (https://github.com/amplitude)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amplitude/experiment-react-native-client/issues"
  },
  "homepage": "https://github.com/amplitude/experiment-react-native-client#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@amplitude/analytics-connector": "^1.4.3",
    "@amplitude/experiment-react-native-client": "^0.7.2",
    "@react-native-async-storage/async-storage": "^1.15.8",
    "unfetch": "4.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^29.5.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.67.8",
    "commitlint": "^17.5.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "genversion": "^3.1.1",
    "husky": "^8.0.3",
    "jest": "^26.5.2",
    "jetifier": "^2.0.0",
    "pod-install": "^0.1.38",
    "prettier": "^2.8.7",
    "react": "17.0.1",
    "react-native": "^0.64.2",
    "react-native-builder-bob": "^0.20.4",
    "release-it": "^15.10.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "setupFiles": [
      "./__mocks__/setup.ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "__mocks__/setup.ts"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
